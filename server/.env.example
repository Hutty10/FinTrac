# =========================
# Application Info
# =========================
TITLE="FinTrac Server Application"
VERSION="0.1.0"
DESCRIPTION="Your application description here"
DEBUG=false
TIMEZONE="UTC"

# =========================
# Server Configuration
# =========================
SERVER_HOST="0.0.0.0"
SERVER_PORT=8000
SERVER_WORKERS=4
API_PREFIX="/api"
DOCS_URL="/docs"
OPENAPI_URL="/openapi.json"
REDOC_URL="/redoc"
OPENAPI_PREFIX=""

# =========================
# PostgreSQL Database
# =========================
DB_POSTGRES_HOST="localhost"
DB_POSTGRES_PORT=5432
DB_POSTGRES_NAME="your_database_name"
DB_POSTGRES_USERNAME="your_db_username"
DB_POSTGRES_PASSWORD="your_db_password"
DB_POSTGRES_SCHEMA="postgresql+asyncpg"
DB_MAX_POOL_CON=10
DB_POOL_SIZE=5
DB_POOL_OVERFLOW=10
DB_TIMEOUT=30
IS_DB_ECHO_LOG=false
IS_DB_FORCE_ROLLBACK=false
IS_DB_EXPIRE_ON_COMMIT=true

# =========================
# Redis Database
# =========================
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_DB=0

# =========================
# Celery Configuration
# =========================
CELERY_BROKER_URL="redis://localhost:6379/0"
CELERY_BACKEND_URL="redis://localhost:6379/1"
# =========================
# API & Auth Tokens
# =========================
SECRET_KEY="your_secret_key_here"
API_TOKEN="your_api_token_here"
AUTH_TOKEN="your_auth_token_here"
JWT_TOKEN_PREFIX="Bearer"
JWT_SECRET_KEY="your_jwt_secret_key_here"
JWT_SUBJECT="user"
JWT_ALGORITHM="HS256"
JWT_ACCESS_TOKEN_EXPIRATION_TIME_IN_SECONDS=3600

# =========================
# CORS Configuration
# =========================
IS_ALLOWED_CREDENTIALS=true
ALLOWED_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]
ALLOWED_METHODS=["*"]
ALLOWED_HEADERS=["*"]

# =========================
# Logging
# =========================
LOGGING_LEVEL=20  # INFO
LOGGERS=("uvicorn.asgi","uvicorn.access")

# =========================
# Hashing / Security
# =========================
HASHING_ALGORITHM_LAYER_1="sha256"
HASHING_ALGORITHM_LAYER_2="sha512"
HASHING_SALT="your_salt_here"
